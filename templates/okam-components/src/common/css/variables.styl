
/**
 * 组件变量
 */

/* Color */
// 状态色
$success := #13ce66
$error := #f7534f
$warning := #ffc82c
$info := #78a4fa

/* Color Palette */
// 黑
$color-black-0 := #000
$color-black-1 := #333
$color-black-2 := #ccc

// 灰
$color-grey-0 := #333
$color-grey-1 := #666
$color-grey-2 := #999
$color-grey-3 := #ccc
$color-grey-4 := #e5e5e5
$color-grey-5 := #f0f0f0
$color-grey-6 := #f7f7f7

// 白
$color-white := #fff
// 红
$color-red := #f7534f
// 蓝
$color-blue := #3c76ff

/* Text Color */
$color-text-base := #333 // 文字的基本色
$color-text-base-inverse := #fff // 反色
$color-text-secondary := #36d57d // 辅助色
$color-text-placeholder := #c9c9c9
$color-text-disabled := #ccc
$color-text-title := #2c405a // 文章标题
$color-text-paragraph := #3f536e // 文章段落
$color-text-link := #3c76ff // 链接

/* 背景色 */
$color-bg := #fff
$color-bg-base := #3c76ff
$color-bg-grey := #f5f5f5

/* 边框颜色 */
$color-border-base := #c5d9e8
$color-border-grey := #ccc

/* 图标颜色 */
$color-icon-base := #ccc

/* Border Radius */
$border-radius-sm := 2px
$border-radius-md := 4px
$border-radius-lg := 6px
$border-radius-circle := 50%

/* 透明度 */
$opacity-active := 0.6 // Button 等组件点击态额透明度
$opacity-disabled := 0.3 // Button 等组件禁用态的透明度

/* Font */
$font-size-xs := 10px // 非常用字号，用于标签
$font-size-sm := 13px // 用于辅助信息
$font-size-md := 14px // 常用字号
$font-size-lg := 16px // 常规标题
$font-size-xl := 18px // 大标题
$font-size-xxl := 24px // 用于大号的数字

$line-height := 1 // 单行
$line-height := 1.5 // 多行

/* 水平间距 */
$spacing-h-sm := 4px
$spacing-h-md := 8px
$spacing-h-lg := 12px
$spacing-h-xl := 16px

/* 垂直间距 */
$spacing-v-xs := 3px
$spacing-v-sm := 6px
$spacing-v-md := 9px
$spacing-v-lg := 12px
$spacing-v-xl := 15px

// Avatar
$o-avatar-bg := $color-bg-grey
$o-avatar-color := $color-white
$o-avatar-border-radius := $border-radius-md
$o-avatar-size-lg := 40px
$o-avatar-size-md := 32px
$o-avatar-size-sm := 24px

// SearchBar
$o-search-bar-bg := $color-bg-base
$o-search-bar-input-bg := $color-bg
$o-search-bar-placeholder-color := $color-text-placeholder
$o-search-bar-height := 32px
$o-search-bar-hspacing := $spacing-h-md
$o-search-bar-vspacing := $spacing-h-sm
$o-search-border-radius := $o-search-bar-height
$o-search-font-size := $font-size-md
